{
  "extends": "@najit-najist/tsconfig/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "baseUrl": "./src",
    "incremental": true,
    "strictNullChecks": true,
    "paths": {
      "@custom-types/*": ["./types/*"],
      "@custom-types": ["./types"],
      "@hooks/*": ["./app/_hooks/*"],
      "@contexts/*": ["./app/_contexts/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@constants": ["./constants"],
      "@components/*": ["./components/*"],
      "@server/*": ["./server/*"],
      "@logger/*": ["./logger/*"],
      "@trpc/web": ["./trpc/web"],
      "@email/*": ["./email/*"],
      "@email": ["./email"],
      "@dayjs": ["./day"],
      "@comgate-client": ["./comgateClient"],
      "@app-components/*": ["./app/(with-visible-layout)/_components/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["out", "build", "node_modules"],
  "references": [
    {
      "path": "../../packages/comgate"
    },
    {
      "path": "../../packages/packeta"
    },
    {
      "path": "../../packages/schemas"
    },
    {
      "path": "../../packages/database"
    }
  ]
}
