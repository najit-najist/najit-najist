{
  "extends": "@najit-najist/tsconfig/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "baseUrl": "./src",
    "incremental": true,
    "strictNullChecks": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "paths": {
      "@custom-types": [
        "./types"
      ],
      "@utils": [
        "./utils"
      ],
      "@hooks": [
        "./hooks"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@constants": [
        "./constants"
      ],
      "@contexts": [
        "./contexts"
      ],
      "@components/*": [
        "./components/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "out",
    "build",
    "node_modules"
  ]
}
