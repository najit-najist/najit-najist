---
import { UserCircleIcon } from '@heroicons/react/24/outline';

const navLinks = [
  { text: 'Úvod', href: '#uvod' },
  { text: 'Náš příběh', href: '#nas-pribeh' },
  { text: 'Kontakt', href: '#kontakt' },
  { text: 'Náš Team', href: '#nas-team' },
];
---

<div class="bg-white">
  <div class="container mx-auto flex py-1">
    <div class="ml-auto">
      <a
        class="inline-flex items-center text-lg"
        class="https://portal.najitnajist.cz"
      >
        <UserCircleIcon width={25} height={25} className="mr-3" /> Přihlásit
      </a>
    </div>
  </div>
</div>

<header class="sticky top-[-1px] left-0 z-20">
  <nav class="container flex mx-auto">
    <ul class="ml-auto flex items-center gap-2 text-lg">
      {
        navLinks.map(({ text, href }) => (
          <li>
            <a
              class="font-bold py-8 px-6 block hover:bg-deep-green-400 hover:text-white duration-200"
              href={href}
            >
              {text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<script>
  const stickyElm = document.querySelector('header')!;

  const observer = new IntersectionObserver(
    ([e]) => e.target.classList.toggle('bg-white', e.intersectionRatio < 1),
    { threshold: [1] }
  );

  observer.observe(stickyElm);
</script>
