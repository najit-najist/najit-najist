---
import Title from '../../Title.astro';
import ourStoryUrlWebm from '../../../assets/our-story.webm';
import ourStoryUrlMp4 from '../../../assets/our-story.min.mp4';
import FloatingImages from './FloatingImages.astro';
---

<div class="max-w-5xl px-4 mx-auto mt-20" id="nas-pribeh">
  <div class="mx-auto text-center">
    <Title>Náš příběh</Title>
  </div>
  <div class="relative">
    <FloatingImages />
    <video
      controls
      width="100%"
      class="sm:aspect-video bg-black relative"
      controls
      controlslist="nodownload"
    >
      <source src={ourStoryUrlWebm} type="video/webm" />
      <source src={ourStoryUrlMp4} type="video/mp4" />
    </video>
  </div>
</div>
