---
import { Image } from '@astrojs/image/components';

import breadUrl from '../../../assets/bread.webp';
import cheeseUrl from '../../../assets/cheese.webp';
import cupcakeUrl from '../../../assets/cupcake.webp';
import milkUrl from '../../../assets/milk.webp';
---

<Image
  class="absolute -translate-x-[80%] -translate-y-[120%] left-0 top-0"
  alt=""
  width={312}
  height={221}
  src={cheeseUrl}
/>
<Image
  class="absolute translate-x-[80%] -translate-y-[80%] sm:block hidden rotate-45 right-0 top-0"
  alt=""
  width={367}
  height={322}
  src={cupcakeUrl}
/>
<Image
  class="absolute -translate-x-[80%] translate-y-[100%] sm:block hidden bottom-0 left-0"
  alt=""
  width={368}
  height={260}
  src={breadUrl}
/>
<Image
  class="absolute translate-x-[80%] translate-y-[100%] bottom-0 right-0"
  alt=""
  width={357}
  height={252}
  src={milkUrl}
/>
