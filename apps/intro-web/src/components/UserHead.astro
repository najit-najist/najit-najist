---
import { Image } from '@astrojs/image/components';
import type { ImageMetadata } from '@astrojs/image/dist/vite-plugin-astro-image';

interface Props {
  image: ImageMetadata;
  name: string;
  position: string;
  imagePosition?: string;
  className?: string;
}
---

<div class:list={['text-center', Astro.props.className]}>
  <Image
    alt=""
    height={225}
    width={225}
    src={Astro.props.image}
    format="webp"
    position={Astro.props.imagePosition ?? 'top'}
    class="rounded-full shadow-md"
  />
  <h3 class="text-xl mt-4">{Astro.props.name}</h3>
  <p>{Astro.props.position}</p>
</div>
