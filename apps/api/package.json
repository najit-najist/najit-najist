{
  "name": "@najit-najist/api",
  "type": "module",
  "version": "0.0.1",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "author": "ondrej-langr <langr.ondrej.work@gmail.com>",
  "private": true,
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:package\"",
    "dev:server": "vite-node -w src/server.ts",
    "dev:package": "tsup --watch",
    "prestart": "prisma migrate deploy",
    "generate:prisma": "prisma generate --schema=./prisma/schema.prisma",
    "generate:version": "node scripts/version.mjs",
    "start": "node dist/server.cjs",
    "prebuild": "rimraf dist && npm run generate:prisma",
    "build": "tsup",
    "postbuild": "npm run generate:version",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@najit-najist/tsconfig": "*",
    "@najit-najist/pb": "*",
    "@swc/core": "^1.3.10",
    "@types/bcrypt": "^5.0.0",
    "@types/email-templates": "^10.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.3",
    "@types/passport-local": "^1.0.34",
    "prisma": "^4.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vite": "^4.0.3",
    "vite-node": "^0.26.2",
    "dotenv-cli": "^6.0.0",
    "@types/nodemailer": "^6.4.6",
    "@types/ejs": "^3.1.1",
    "vite-tsconfig-paths": "^4.0.3"
  },
  "dependencies": {
    "superjson": "^1.11.0",
    "@fastify/auth": "^4.1.0",
    "@fastify/cookie": "^8.3.0",
    "cross-fetch": "^3.1.5",
    "@fastify/cors": "^8.1.0",
    "@fastify/jwt": "^6.3.2",
    "@fastify/passport": "^2.2.0",
    "nodemailer": "^6.8.0",
    "@fastify/rate-limit": "^7.5.0",
    "@fastify/session": "^10.0.2",
    "@prisma/client": "^4.5.0",
    "@trpc/server": "^10.4.3",
    "@faker-js/faker": "^7.3.0",
    "bcrypt": "^5.1.0",
    "concurrently": "^7.5.0",
    "ejs": "^3.1.8",
    "email-templates": "^10.0.1",
    "fastify": "^4.9.2",
    "fastify-plugin": "^4.3.0",
    "fs-extra": "^10.1.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pino-pretty": "^9.1.1",
    "zod": "^3.19.1",
    "vitest": "^0.24.5",
    "zod-to-json-schema": "^3.18.1"
  }
}
