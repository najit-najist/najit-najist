{
  "name": "najit-jist",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "generate:prisma": "prisma generate --schema=./apps/api/prisma/schema.prisma",
    "prebuild": "npm run generate:prisma",
    "build": "turbo run build",
    "prebuild:api": "npm run generate:prisma",
    "build:api": "turbo run build --filter=@najit-najist/api",
    "prebuild:intro-web": "npm run generate:prisma",
    "build:intro-web": "turbo run build --filter=@najit-najist/intro-web",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.5.5",
    "tsup": "^6.3.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.19.2",
  "dependencies": {
    "concurrently": "^7.4.0"
  }
}
