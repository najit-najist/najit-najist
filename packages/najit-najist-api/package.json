{
  "name": "@najit-najist/api",
  "type": "module",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./*": "./*",
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    }, 
    "./edge": {
      "import": "./dist/edge.js",
      "types": "./dist/edge.d.ts"
    }
  },
  "author": "ondrej-langr <langr.ondrej.work@gmail.com>",
  "private": true,
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:package\" \"npm:dev:package:types\" \"npm:dev:package:types:aliases\"",
    "dev:package": "npm run build:package -- --watch",
    "dev:package:types": "npm run build:types -- --watch",
    "dev:package:types:aliases": "npm run build:types:aliases -- --watch",
    "prebuild": "rimraf dist",
    "build": "npm run build:package && npm run build:types && npm run build:types:aliases",
    "build:package": "swc ./src -d dist",
    "build:types": "tsc",
    "build:types:aliases": "tsc-alias",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@najit-najist/pb": "*",
    "@najit-najist/tsconfig": "*",
    "@swc/core": "^1.3.41",
    "@types/bcrypt": "^5.0.0",
    "@types/ejs": "^3.1.1",
    "@types/email-templates": "^10.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.3",
    "@types/nodemailer": "^6.4.6",
    "@types/passport-local": "^1.0.34",
    "@types/zxcvbn": "^4.4.1",
    "dotenv-cli": "^6.0.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.3",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vite-tsconfig-paths": "^4.0.5"
  },
  "dependencies": {
    "@faker-js/faker": "^7.3.0",
    "@najit-najist/pb": "*",
    "@trpc/server": "^10.14.0",
    "bcrypt": "^5.1.0",
    "concurrently": "^7.5.0",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "email-templates": "^11.0.3",
    "fs-extra": "^10.1.0",
    "iron-session": "^6.3.1",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^3.1.2",
    "lru-cache": "^8.0.4",
    "next": "^13.3",
    "nextjs-cors": "^2.1.2",
    "nodemailer": "^6.8.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pino": "^8.11.0",
    "pino-pretty": "^9.1.1",
    "superjson": "^1.11.0",
    "vitest": "^0.24.5",
    "zod": "^3.19.1",
    "zod-to-json-schema": "^3.18.1",
    "zxcvbn": "^4.4.2"
  }
}
