{
  "name": "@najit-najist/ui",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./*",
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./headless": {
      "import": "./dist/headless.js",
      "require": "./dist/headless.js",
      "types": "./dist/headless.d.ts"
    },
    "./editor": {
      "import": "./dist/editor/index.js",
      "require": "./dist/editor/index.js",
      "types": "./dist/editor/index.d.ts"
    },
    "./editor-renderer": {
      "import": "./dist/BlockEditorRenderer/index.js",
      "require": "./dist/BlockEditorRenderer/index.js",
      "types": "./dist/BlockEditorRenderer/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf tsconfig.tsbuildinfo ./dist",
    "build": "pnpm build:package && pnpm build:types",
    "build:package": "swc ./src -d dist --strip-leading-paths",
    "build:types": "tsc",
    "dev": "pnpm run --filter=@najit-najist/ui \"/^dev:.*/\"",
    "dev:package": "pnpm build:package --watch",
    "dev:package:types": "pnpm build:types --watch",
    "lint": "eslint *.ts*"
  },
  "dependencies": {
    "@editorjs/editorjs": "^2.30.7",
    "@editorjs/paragraph": "^2.11.6",
    "@floating-ui/react": "^0.26.28",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.1.5",
    "@najit-najist/schemas": "workspace:*",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.36.3",
    "html-react-parser": "^5.1.18",
    "next": "^15.0.3",
    "react-color-palette": "^7.3.0",
    "react-day-picker": "8.10.1",
    "react-dropzone": "^14.3.5",
    "react-editor-js": "^2.1.0",
    "react-error-boundary": "^4.1.2",
    "react-quill": "2.0.0",
    "react-quill-new": "^3.3.3",
    "sonner": "^1.7.0"
  },
  "devDependencies": {
    "@editorjs/delimiter": "^1.4.2",
    "@editorjs/header": "^2.8.8",
    "@editorjs/link": "^2.6.2",
    "@editorjs/nested-list": "^1.4.3",
    "@editorjs/underline": "^1.2.1",
    "@najit-najist/eslint-config-custom": "workspace:*",
    "@najit-najist/tsconfig": "workspace:*",
    "@swc/core": "^1.9.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "react": "18.2",
    "react-dom": "18.2",
    "react-hook-form": "^7.53.2",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "react": "18.2",
    "react-dom": "18.2",
    "react-hook-form": "^7.37.0"
  }
}
