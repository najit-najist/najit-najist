{
  "name": "@najit-najist/ui",
  "type": "module",
  "version": "0.0.0",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "exports": {
    "./*": "./*",
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint *.ts*",
    "dev": "concurrently \"npm:dev:package\" \"npm:dev:package:types\"",
    "dev:package": "npm run build:package -- --watch",
    "dev:package:types": "npm run build:types -- --watch",
    "prebuild": "rimraf dist",
    "build": "npm run build:package && npm run build:types",
    "build:package": "swc ./src -d dist --config jsc.target=esnext",
    "build:types": "tsc"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "@heroicons/react": "^2.0.12",
    "@headlessui/react": "^1.7.13",
    "class-variance-authority": "^0.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "react-hook-form": "^7.37.0",
    "@swc/core": "^1.3.41",
    "@najit-najist/eslint-config-custom": "*",
    "@najit-najist/tsconfig": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.37.0"
  }
}
