{
  "name": "@najit-najist/email-templates",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    "./*": "./*",
    "./package.json": "./package.json",
    ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs",
        "types": "./dist/index.d.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm:dev:package\" \"npm:dev:package:types\"",
    "dev:package": "npm run build:package -- --watch",
    "dev:package:types": "npm run build:types -- --watch",
    "prebuild": "rimraf dist",
    "dev:preview": "npx email dev --dir=src",
    "build": "npm run build:package && npm run build:types",
    "build:package": "swc ./src -d dist",
    "build:types": "tsc"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "clsx": "^1.1.1",
    "react-email" : "^1.9.4",
    "@najit-najist/tailwind-plugin": "*",
    "@react-email/render": "^0.0.7",
    "@react-email/button": "^0.0.9",
    "@react-email/tailwind": "^0.0.8",
    "@react-email/img": "^0.0.5",
    "@react-email/hr": "^0.0.5",
    "@react-email/html": "^0.0.4",
    "@react-email/text": "^0.0.5",
    "@react-email/link": "^0.0.5",
    "@react-email/font": "^0.0.2",
    "@react-email/column": "^0.0.7",
    "@react-email/section": "^0.0.9",
    "@react-email/heading": "^0.0.8",
    "@react-email/head": "^0.0.5"
  },
  "devDependencies": {
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "typescript": "^4.8.4"
  }
}
