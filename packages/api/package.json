{
  "name": "@najit-najist/api",
  "version": "0.0.0",
  "private": true,
  "author": "ondrej-langr <langr.ondrej.work@gmail.com>",
  "type": "module",
  "exports": {
    "./*": "./*",
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./edge": {
      "import": "./dist/edge.js",
      "types": "./dist/edge.d.ts"
    },
    "./logger": {
      "import": "./dist/logger.js",
      "types": "./dist/logger.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:package\" \"npm:dev:package:types\" \"npm:dev:package:types:aliases\"",
    "dev:package": "pnpm build:package -- --watch",
    "dev:package:types": "pnpm build:types -- --watch",
    "dev:package:types:aliases": "pnpm build:types:aliases -- --watch",
    "prebuild": "rimraf tsconfig.tsbuildinfo ./dist",
    "build": "pnpm build:package && pnpm build:types && pnpm build:types:aliases",
    "build:package": "swc ./src -d dist",
    "build:types": "tsc",
    "build:types:aliases": "tsc-alias",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@faker-js/faker": "^7.3.0",
    "@najit-najist/database": "*",
    "@najit-najist/schemas": "*",
    "@najit-najist/security": "*",
    "@najit-najist/email-templates": "*",
    "@najit-najist/packeta": "*",
    "@trpc/server": "^10.14.0",
    "bcrypt": "^5.1.0",
    "@logtail/node": "^0.4.21",
    "@logtail/pino": "^0.4.21",
    "chalk": "5.2.0",
    "pino": "^8.0.0",
    "concurrently": "^7.5.0",
    "cross-fetch": "^3.1.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.0.3",
    "fs-extra": "^10.1.0",
    "drizzle-cursor": "^0.4.0",
    "iron-session": "^6.3.1",
    "query-string": "^9.0.0",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^3.1.2",
    "lru-cache": "^8.0.4",
    "mime-types": "^2.1.35",
    "drizzle-orm": "^0.30.10",
    "next": "14.1",
    "nextjs-cors": "^2.2.0",
    "nodemailer": "^6.8.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "slugify": "^1.6.6",
    "string-strip-html": "^13.2.3",
    "superjson": "^1.13.1",
    "vitest": "^0.24.5",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@najit-najist/tsconfig": "*",
    "@swc/core": "^1.3.96",
    "@types/bcrypt": "^5.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^18.11.3",
    "@types/nodemailer": "^6.4.6",
    "@types/passport-local": "^1.0.34",
    "dotenv-cli": "^6.0.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.2.2",
    "vite": "^4.1.4",
    "vite-tsconfig-paths": "^4.0.5"
  }
}
