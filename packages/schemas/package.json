{
  "name": "@najit-najist/schemas",
  "version": "0.0.0",
  "private": true,
  "author": "ondrej-langr <langr.ondrej.work@gmail.com>",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf tsconfig.tsbuildinfo ./dist",
    "build": "pnpm build:package && pnpm build:types && pnpm build:types:aliases",
    "build:package": "swc ./src -d dist --strip-leading-paths ",
    "build:types": "tsc",
    "build:types:aliases": "tsc-alias",
    "dev": "pnpm run --filter=@najit-najist/schemas \"/^dev:.*/\"",
    "dev:package": "pnpm build:package --watch",
    "dev:package:types": "pnpm build:types --watch",
    "dev:package:types:aliases": "pnpm build:types:aliases --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@najit-najist/database": "workspace:*",
    "@najit-najist/packeta": "workspace:*",
    "dayjs": "^1.11.13",
    "drizzle-zod": "^0.5.1",
    "js-base64": "^3.7.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@najit-najist/tsconfig": "workspace:*",
    "tsc-alias": "^1.8.10",
    "vitest": "^2.1.5"
  }
}
