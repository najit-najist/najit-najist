{
  "extends": "@najit-najist/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src"]
}
